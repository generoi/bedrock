{
  "private": true,
  "browserslist": [
    "extends @wordpress/browserslist-config",
    "not ie 11"
  ],
  "scripts": {
    "build": "cross-env NODE_ENV=development run-s mix",
    "build:production": "cross-env NODE_ENV=production run-s clean mix",
    "start": "cross-env NODE_ENV=development run-s \"mix -- --watch\"",
    "hot": "cross-env NODE_ENV=development run-s build mix:hot",
    "mix": "webpack --progress --config=node_modules/laravel-mix/setup/webpack.config.js",
    "mix:hot": "webpack-dev-server --inline --hot --config=node_modules/laravel-mix/setup/webpack.config.js",
    "clean": "run-p clean:*",
    "clean:dist": "rimraf dist",
    "clean:cache": "rimraf storage/framework/cache/*.php storage/framework/cache/data/*.php",
    "clean:views": "rimraf storage/framework/views/*.php",
    "lint": "run-s -c lint:*",
    "lint:scripts": "eslint resources/assets/scripts",
    "lint:styles": "stylelint \"resources/assets/**/*.{vue,css,sass,scss,less}\"",
    "test": "run-s -c lint",
    "ci:scripts": "eslint resources/assets/scripts --format checkstyle",
    "ci:styles": "stylelint \"resources/assets/**/*.{vue,css,sass,scss,less}\" --custom-formatter=node_modules/stylelint-checkstyle-formatter",
    "translate": "run-s -c translate:*",
    "translate:pot": "wp i18n make-pot . ./resources/languages/sage.pot --ignore-domain --include=\"app,resources/assets,resources/views\"",
    "translate:js": "wp i18n make-json ./resources/languages --no-purge --pretty-print"
  },
  "devDependencies": {
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@tinypixelco/laravel-mix-wp-blocks": "^1.0.0",
    "@wordpress/babel-preset-default": "^5.2.1",
    "@wordpress/base-styles": "^2.1.0",
    "@wordpress/browserslist-config": "^3.0.3",
    "@wordpress/dependency-extraction-webpack-plugin": "^3.1.2",
    "babel-eslint": "^10.1.0",
    "browser-sync": "^2.26.14",
    "browser-sync-webpack-plugin": "^2.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.25.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-react": "^7.23.2",
    "js-yaml": "^3.14.1",
    "laravel-mix": "^6.0.18",
    "laravel-mix-copy-watched": "^2.3.0",
    "laravel-mix-purgecss": "^5.0.0-rc.1",
    "npm-run-all": "^4.1",
    "postcss": "^8.2.12",
    "postcss-custom-properties": "^9.2.0",
    "purgecss-with-wordpress": "^2.1.0",
    "rimraf": "^3.0.2",
    "sass": "^1.32.11",
    "sass-loader": "^8.0.2",
    "stylelint": "^13.13.0",
    "stylelint-checkstyle-formatter": "^0.1.2",
    "stylelint-config-standard": "^20.0.0",
    "vue-template-compiler": "^2.6.12"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "genero-design-system": "^4.0.0-beta.4",
    "jquery": "^3.6.0",
    "lodash-es": "^4.17.21",
    "normalize-scss": "^7.0.1",
    "sass-mq": "^5.0.1",
    "swiper": "^6.7.0"
  }
}
