{% extends 'parts/slideshow.twig' %}

{% block slide %}
  {% set is_object = (item.image or item.content or item.post_type or item.taxonomy) %}
  {% set object_type = object_type|default('post') %}

  {# Support object ID's #}
  {% if (not is_object) and (item matches '/^\\d+$/') %}
    {% set item = (object_type == 'term') ? TTerm(item) : TPost(item) %}
  {% endif %}

  {# TimberPost objects were passed as items #}
  {% if item.post_type %}

    {% include ['teasers/teaser--'~item.post_type~'.twig', 'teasers/teaser.twig'] with { post: item } %}

  {# TimberTerm objects were passed as items #}
  {% elseif item.taxonomy %}

    {% include ['teasers/teaser-term--'~item.taxonomy~'.twig', 'teasers/teaser-term.twig'] with { term: item } %}

  {% endif %}
{% endblock %}
