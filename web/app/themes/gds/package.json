{
  "private": true,
  "browserslist": [
    "extends @wordpress/browserslist-config"
  ],
  "scripts": {
    "build": "mix",
    "build:production": "mix --production",
    "start": "mix watch",
    "start:poll": "mix watch -- --watch-options-poll=1000",
    "hot": "mix watch --hot",
    "clear": "wp acorn optimize:clear",
    "test": "npm run lint",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint resources/scripts",
    "lint:css": "stylelint \"resources/**/*.{css,scss,vue}\"",
    "ci:scripts": "eslint resources/scripts --format checkstyle",
    "ci:styles": "stylelint \"resources/**/*.{vue,css,sass,scss,less}\" --custom-formatter=node_modules/stylelint-checkstyle-formatter",
    "translate": "npm run translate:pot && npm run translate:js",
    "translate:pot": "wp i18n make-pot . ./resources/lang/sage.pot --ignore-domain --include=\"app,resources\"",
    "translate:js": "wp i18n make-json ./resources/lang --pretty-print"
  },
  "devDependencies": {
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@tinypixelco/laravel-mix-wp-blocks": "^1.0.0",
    "@wordpress/babel-preset-default": "^5.2.1",
    "@wordpress/base-styles": "^2.1.0",
    "@wordpress/browserslist-config": "^4.1.0",
    "@wordpress/dependency-extraction-webpack-plugin": "^3.1.2",
    "babel-eslint": "^10.1.0",
    "browser-sync": "^2.26.14",
    "browser-sync-webpack-plugin": "^2.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.25.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-react": "^7.23.2",
    "js-yaml": "^3.14.1",
    "laravel-mix": "^6.0.18",
    "laravel-mix-copy-watched": "^2.3.0",
    "postcss": "^8.2.12",
    "postcss-inline-svg": "^5.0.0",
    "rimraf": "^3.0.2",
    "sass": "^1.32.11",
    "sass-loader": "^8.0.2",
    "stylelint": "^14.16.0",
    "stylelint-checkstyle-formatter": "^0.1.2",
    "stylelint-config-standard-scss": "^6.1.0",
    "vue-template-compiler": "^2.6.12"
  },
  "dependencies": {
    "@builder.io/partytown": "^0.7.3",
    "@fortawesome/fontawesome-free": "^6.2.1",
    "@fortawesome/fontawesome-pro": "^6.2.1",
    "@fortawesome/fontawesome-svg-core": "^6.2.1",
    "@fortawesome/free-brands-svg-icons": "^6.2.1",
    "@fortawesome/pro-duotone-svg-icons": "^6.2.1",
    "@fortawesome/pro-light-svg-icons": "^6.2.1",
    "@fortawesome/pro-regular-svg-icons": "^6.2.1",
    "@fortawesome/pro-solid-svg-icons": "^6.2.1",
    "@fortawesome/pro-thin-svg-icons": "^6.2.1",
    "@fortawesome/sharp-solid-svg-icons": "^6.2.1",
    "classnames": "^2.3.1",
    "jquery": "^3.6.4",
    "lodash-es": "^4.17.21",
    "modern-normalize": "^1.1.0",
    "sass-mq": "^6.0.0",
    "swiper": "^6.8.2"
  }
}
