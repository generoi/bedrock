{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "gds/grid",
  "title": "Grid",
  "description": "Display a grid of content",
  "category": "layout",
  "icon": "grid-view",
  "attributes": {
    "columns": {
      "type": "integer",
      "default": 3
    },
    "textAlign": {
      "type": "string"
    }
  },
  "supports": {
    "html": false,
    "align": ["wide", "full"],
    "__experimentalExposeControlsToChildren": true,
    "layout": {
      "allowSwitching": false,
      "allowInheriting": false,
      "allowOrientation": false,
      "default": {
        "type": "flex"
      }
    }
  },
  "example": {
    "innerBlocks": [
      {
        "name": "gds/media-card",
        "attributes": { "mediaType": "image", "mediaUrl": "https://cldup.com/Fz-ASbo2s3.jpg" }
      },
      {
        "name": "gds/media-card",
        "attributes": { "mediaType": "image", "mediaUrl": "https://cldup.com/Fz-ASbo2s3.jpg" }
      }
    ],
    "attributes": {
      "columns": 2
    },
    "viewportWidth": 800
  },
  "editorScript": "file:./index.js",
  "style": "file:./style.css"
}
